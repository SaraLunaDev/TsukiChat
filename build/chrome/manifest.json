{
  "manifest_version": 3,
  "name": "TsukiChat",
  "version": "2.4.0",
  "description": "Modifica la apariencia de los VODs de YouTube para que simule ser el chat de Twitch",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://7tv.io/*",
    "https://cdn.7tv.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/live/*",
        "*://youtube.com/live/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.youtube.com/live_chat*",
        "*://youtube.com/live_chat*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TsukiChat",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "events/*.svg",
        "badges/*.svg"
      ],
      "matches": [
        "*://www.youtube.com/*",
        "*://youtube.com/*"
      ]
    }
  ]
}